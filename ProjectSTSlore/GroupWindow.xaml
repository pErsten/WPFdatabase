<Window x:Class="ProjectSTSlore.GroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSTSlore"
        mc:Ignorable="d"
        Title="GroupWindow" Height="150" Width="400">
    <Grid Margin="30, 0, 30, 0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Number of the group:" FontWeight="Bold" Margin="10"/>
        <TextBox Grid.Row="1" x:Name="GroupWindow_GroupNumber"/>
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="OK" IsDefault="True" Click="Submit_Click"/>
            <Button Grid.Column="2" Content="Cancel" IsCancel="True" Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
